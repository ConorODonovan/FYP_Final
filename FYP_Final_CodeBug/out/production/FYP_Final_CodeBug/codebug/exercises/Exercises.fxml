<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="1080.0" prefWidth="1920.0" stylesheets="@../generic.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="codebug.exercises.ExercisesController">
   <top>
      <AnchorPane id="top-anchor-pane" prefHeight="100.0" prefWidth="1920.0" BorderPane.alignment="CENTER">
         <children>
            <VBox id="top-vbox" prefHeight="100.0" prefWidth="1920.0">
               <children>
                  <MenuBar id="menu-bar">
                    <menus>
                      <Menu mnemonicParsing="false" text="File">
                        <items>
                          <MenuItem mnemonicParsing="false" text="Close" />
                        </items>
                      </Menu>
                      <Menu mnemonicParsing="false" text="Edit">
                        <items>
                          <MenuItem mnemonicParsing="false" text="Delete" />
                        </items>
                      </Menu>
                      <Menu mnemonicParsing="false" text="Help">
                        <items>
                          <MenuItem mnemonicParsing="false" text="About" />
                        </items>
                      </Menu>
                    </menus>
                  </MenuBar>
               </children>
            </VBox>
         </children>
      </AnchorPane>
   </top>
   <center>
      <VBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="buttonBackToLogin" mnemonicParsing="false" onAction="#backToLogin" text="Back to Login" />
            <Button fx:id="buttonBackToHomepage" mnemonicParsing="false" onAction="#backToHomepage" text="Back to Homepage" />
            <Button fx:id="buttonTestTransistorExercise" mnemonicParsing="false" onAction="#goToTestScene" text="Test Transistor Exercise" />
            <Button fx:id="buttonBinaryConverter" mnemonicParsing="false" onAction="#goToBinaryConverter" text="Binary Converter" />
            <Button fx:id="buttonCiphers" mnemonicParsing="false" onAction="#goToCiphers" text="Ciphers" />
         </children>
      </VBox>
   </center>
</BorderPane>
